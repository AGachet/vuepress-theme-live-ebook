*,
*::after,
*::before
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  box-sizing border-box

html
  font-size $fs-2
  line-height $base-sizing

  @media (min-width: $screen-md-min)
    font-size $fs-3

body
  font-family $ff-base
  color $c-text

  &.no-scroll
    position fixed
    width 100%
